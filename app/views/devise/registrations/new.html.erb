<%- content_for :title, "Register" %>
<section class="content">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= render FormLabelComponent.new(form: f, field: "email") %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= render FormLabelComponent.new(form: f, field: "username") %>
    <%= f.text_field :username, autocomplete: "username", placeholder: "Your name", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= render FormLabelComponent.new(form: f, field: "password") %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= render FormLabelComponent.new(form: f, field: "password_confirmation") %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <%= f.submit "Sign up", class: "btn btn-primary" %>
<% end %>

</section>
