<div class="mb-3">
  <%= form.label :person, class: "form-label" %>
  <%= form.text_field :person,
    required: true,
    autocomplete: "off",
    data: {
      autocomplete_target: "input"
    } %>
  <%= form.hidden_field :person_id, data: { autocomplete_target: "hidden" } %>
  <ul class="autocomplete" data-autocomplete-target="results"></ul>
</div>
<div class="mb-3">
  <%= form.label :seconds, class: "form-label" %>
  <%= form.text_field :seconds, class: "form-control" %>
</div>
