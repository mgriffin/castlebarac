<!DOCTYPE html>
<html>
  <head>
    <title>Castlebarac</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "water" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", type: "module" %>
  </head>

  <body>
    <%- if Flipper.enabled?(:banner) %>
    <header>
      <nav aria-label="Main Navigation">
      <span class="links">
        <%= link_to root_url, class: "name" do %>
          <%= inline_svg_tag "shield.svg" %>
          Castlebar A.C.
        <%- end %>
        <%= link_to "About", about_url, class: "link" %>
      </span>
      <%- if Flipper.enabled?(:login) %>
      <%= link_to "Log in", "#", class: "login" %>
      <%- end %>
      </nav>
    </header>
    <% end %>
    <main>
      <div class="flash">
        <%= render "layouts/flash" %>
      </div>
      <%= yield %>
    </main>
  </body>
</html>
