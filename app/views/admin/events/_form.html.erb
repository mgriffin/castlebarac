<%= form_with model: [:admin, event] do |form| %>
  <%= form.label :title, "Title: " %>
  <%= form.text_field :title, required: true, autofocus: true, placeholder: "Event title", size: "60" %>

  <%= form.label :start_time, "Date and time: " %>
  <%= form.datetime_local_field :start_time, value: "#{Date.today.strftime("%Y-%m-%d")} 12:00" %>

  <%= form.label :content, "Body: " %>
  <%= form.rich_text_area :content, required: false %>

  <%= form.submit "Post it" %>
<% end %>
