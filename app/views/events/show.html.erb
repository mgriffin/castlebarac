<div class="content">
  <h2><%= @event.title %></h2>
  <p class="subtle"><%= @event.start_time.strftime("%A %e %B %Y at %l:%M%P") %></p>

  <p><%= @event.content %></p>

  <%- if @event.races %>
    <%- @event.races.sort_by { |r| r.name }.each do |race| %>
      <h3><%= race.name %></h3>
      <table class="results">
        <tr>
          <th>Position</th>
          <th>Bib</th>
          <th>Name</th>
          <th>Club</th>
          <th>Category</th>
          <th>Time</th>
        </tr>
        <%- race.results.each do |result| %>
          <tr<%= " class=cbac" if result.club == "Castlebar A.C." %>>
            <td class="position">
              <%= tag.a(name: dom_id(result)) if result.club == "Castlebar A.C." %>
              <%= result.position %>
            </td>
            <td class="bib">
              <%= result.bib %>
            </td>
            <td class="name">
              <%- if policy(result).view_person? && result.person %>
                <%= link_to result.name, person_path(result.person) %>
              <%- else %>
                <%= result.name %>
              <%- end %>
              <%- if policy([:admin, result]).edit? && result.club == "Castlebar A.C."%>
                <%= link_to edit_admin_result_path(result) do
                  inline_svg_tag "pencil.svg"
                end %>
              <%- end %>
            </td>
            <td class="club">
              <%= result.club %>
            </td>
            <td class="category">
              <%= result.category %>
            </td>
            <td class="result">
              <%- if ["DNS", "DNF", "DQ", ""].include? result.result %>
                <%= result.result %>
              <%- else %>
                <%= result.net_time %>
              <%- end %>
            </td>
          </tr>
        <%- end %>
      </table>
    <%- end %>
  <%- end %>
</div>
